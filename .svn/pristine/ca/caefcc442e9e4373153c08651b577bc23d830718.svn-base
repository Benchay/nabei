            	imgUrl_main:'',
            	id:0,
                radio3:'',
                radio4:'',
                radio5:'',
                totalStockNum:0,
                totalStockNum1:0,
                productCode:'',
                price:1,
                stallName:'',
                orderNum:'',
                productInfo:'',
                closeFee:'',
                productId:'',
                productVariantId:'',
                multipleSelection:[],
                tableData:[],
                color:'',
                size:'',
                colors:[],
                sizes:[],
                companyId:'',
                stallId:'',
                vmStallId:'',
                myvmstallId:'',
                stockNum:'',
                pageSize:10,
                currentPage:1,
                array:[],
                sellerProductInfo:[],
                purchasePrice:0.00,
                roleForm: {
                    userId: '',
                    roleId: '',
                    compId:''
                },
                isVariant:false,
                purchasePrice1:true,

            }
        },
        watch:{
            '$route':function (route) {
            this.initData();
