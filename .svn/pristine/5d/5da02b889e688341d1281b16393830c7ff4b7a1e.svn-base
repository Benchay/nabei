.commodityStatistics{
    color:#333;
    margin:0 30px;
    background: #fff;
    padding: 20px 30px;
    height:100%;
    .commodityList{
        margin-top: 15px;
        .lists{
            display: flex;
            justify-content: space-between;
            align-items: center;
            li{
                width:24%;
                height: 85px;
                display: flex;
                align-items: center;
                justify-content: center;
                position: relative;
                color:#fff;
                a{
                    color:#fff;
                }
                .down{
                    width:0;
                    height:0;
                    border-left:6px solid transparent;
                    border-right:6px solid transparent;
                    border-top:6px solid #0066cc;
                    position: absolute;
                    left:49%;
                    bottom:-10px;
                }
            }
            li:first-child{
                background:linear-gradient(#24cff5, #0a92fc);
            }
            li:nth-child(2){
                background:linear-gradient(#05deea,#08a3c9);
            }
            li:nth-child(3){
                background: linear-gradient(#d06efc,#8c46cb);
            }
            li:nth-child(4){
                background: linear-gradient(#f7b90c,#f69111);
            }
        }
        .purLists{
            justify-content: flex-start;
            li{
                margin-right: 1%;
            }
            li:last-child{
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .riseAndFall{
                font-size: 12px;
            }
            .purList1{
                div{
                    height: 27px;
                    line-height: 27px;
                }
            }
        }
    }
    .commodityContent{
        margin-top: 30px;
        .contentImg{
        img{
            width: 40px;
            height: 40px;
        }
    }
        .contentInput{
            div{
                width: 300px;
            }
        }
    }
}
