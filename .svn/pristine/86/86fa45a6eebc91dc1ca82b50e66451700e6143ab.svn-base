<script>
    import {querySettlementOrder} from '@/api/getData'
    import {userInfo,getStore,setStore} from  '../config/mUtils'
    import {formatDate} from '../utils/date.js'

    export default {
        data() {
            return {
                input:'',
                radio:1,
                options: [{
                    value: '1',
                    label: '现金'
                }, {
                    value: '2',
                    label: '支付宝'
                },{
                    value: '3',
                    label: '微信'
                },{
                    value: '4',
                    label: '网银'
                }],
                value: '',
                tableData3:[],
                currentPage:1,
                pageSize:10,
                totalCount:0,
                roleForm: {
                    userId: '',
                    roleId: '',
                    compId:''
