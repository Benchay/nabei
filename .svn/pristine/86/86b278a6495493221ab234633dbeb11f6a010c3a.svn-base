.center-menu{
    background: #f4f4f4;
    height:50px;
    margin-left: 30px;
}
.center-menu>li>a{
    display: inline-block;
    line-height: 50px;
    width:160px;
    text-align: center;
    font-size: 16px;
    float: left;
    color:#fff;
    background: #da444f;
}
.messageCenter{
    margin:0 30px;
    background: #fff;
    padding: 20px 40px;
    height: 100%;
    .messageRadio{
        margin: 20px 0;
    }
    .el-table th > .cell,.el-table .cell{
        text-align: left;
    }
    .messageContent{
        overflow: hidden;
        text-overflow:ellipsis;
        white-space: nowrap;
        color:#666;
    }
    .messageContent:hover{
        color:@red;
    }
    .messagePage{
        text-align: center;
        margin-top: 20px;
    }
}
.messageDetails{
    margin:0 30px;
    background: #fff;
    padding: 20px 40px;
    height: 100%;
    .detailsContent{
        margin-top: 40px;
        border:1px solid #d8d8d8;
        color:#666;
        .contentHead{
            border-bottom: 1px solid #d8d8d8;
            height: 35px;
            background: #f4f4f4;
            padding: 0 40px;
            font-size: 14px;
            p{
                margin-left: 30px;
            }
        }
        .detailsCont{
            padding: 40px 40px 25px;
            p{
                margin-bottom: 15px;
            }
        }
    }
}
.el-pager li.active{
    border-color: #ccc;
    background-color: #ccc;
    color: #fff;
    cursor: default;
}
