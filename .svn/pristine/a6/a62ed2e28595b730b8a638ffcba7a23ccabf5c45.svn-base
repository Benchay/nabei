<script>
    import {getMenuAuth,haveMenuAuth} from  '../utils/AuthMenu.js'
    import {queryOrderDetailSales} from '@/api/getData'
    import {userInfo} from  '../config/mUtils'
    import {export_json_to_excel} from '../vendor/Export2Excel.js'
    const _XLSX = require('xlsx')
    const X = typeof XLSX !== 'undefined' ? XLSX : _XLSX;

    export default {
        components: {
        },
        data() {
            return {
                startDate: new Date(),
                itemNo: '',
                roleForm: {
                    userId: '',
                    roleId: '',
                    compId: ''
                },
                radio3: '1',
                radio: 0,
                value6: '',
                input1: '',
                input3: '',
                tableData: [],
                tableData2:[],
                pagesize: 10,
                //默认高亮行数据id
                highlightId: -1,
                //当前页码
                currentPage: 1,
                //查询的页码
                start: 1,
                //默认数据总数
                totalCount: 0,
                allocateProductNum: 0,
                orderNub: 0,
                today:'',
                tomorrow:'',
                query:''
            }
        },
        watch:{
            '$route':function (route) {
                this.startDate = new Date();
                    this.itemNo = '';
                this.initData();
            }
        },
        mounted() {
            this.roleForm.compId = userInfo().companyId;
            this.roleForm.userId = userInfo().userId;
            this.initData();
        },
        methods: {
        	getMenuAuthFun(index){
                var b= getMenuAuth(index);
                return b;
            },
            handleIconClickCode(){
        	    console.log(1)
            },
            async initData(param){
                if (param == undefined){
                    this.today =  new Date();
                    this.today.setHours(8);
                    this.today.setMinutes(0);
                    this.today.setSeconds(0);
                    this.today.setMilliseconds(0);
                    this.tomorrow = new Date();
                    this.tomorrow.setHours(31);
                    this.tomorrow.setMinutes(59);
                    this.tomorrow.setSeconds(59);
                    this.tomorrow.setMilliseconds(59);
                    param={
                        "companyId":this.roleForm.compId,
                        "startTime":this.today,
                        "endTime":this.tomorrow,
                        "searchKey":this.query,
                        "getHeader":"1",
                        "pageIndex":this.currentPage,
                        "pageSize":this.pagesize
                    }
                }

                const res = await queryOrderDetailSales(param);
                if (res.isSuccess == true){
                     let table= res.result.pageResult.results;
                    this.tableData = table;
                    this.orderNub = res.result.salesCount.orderNub;
                    this.allocateProductNum = res.result.salesCount.allocateProductNum;
                     this.totalCount =  res.result.pageResult.totalCount;
                }
            },
            handleIconClickDate(date){
                this.tableData = [];
                let newTime = date;
               this.today = newTime +' 00:00:00';
               this.tomorrow = newTime +' 23:59:59';
                let param={
                    "companyId":this.roleForm.compId,
                    "startTime":this.today,
                    "endTime":this.tomorrow,
                    "searchKey":this.query,
                    "getHeader":"1",
                    "pageIndex":this.currentPage,
                    "pageSize":this.pagesize
                }
                this.initData(param)
            },
            //远程搜索模糊查询货号
            async remoteMethod(query){
                this.query = query;
                    let param = {
                        "companyId":this.roleForm.compId,
                        "startTime":this.today,
                        "endTime":this.tomorrow,
                        "searchKey":this.query,
                        "getHeader":"1",
                        "pageIndex":this.currentPage,
                        "pageSize":this.pagesize
                    };
                    const res = await queryOrderDetailSales(param);
                    if (res.isSuccess == true){
                        let table= res.result.pageResult.results;
                        this.tableData = table;
                        this.orderNub = res.result.salesCount.orderNub;
                        this.allocateProductNum = res.result.salesCount.allocateProductNum;
                        this.totalCount =  res.result.pageResult.totalCount;
                    }

            },
            choseLabel(){
                if(this.radio3 == '1'){
                    let param = {
                        "companyId":this.roleForm.compId,
                        "startTime":this.today,
                        "endTime":this.tomorrow,
                        "searchKey":this.query,
                        "getHeader":"1",
                        "pageIndex":this.currentPage,
                        "pageSize":this.pagesize
                    };
                    this.initData(param)
                }
            },
            handleSizeChange(val) {
                this.pagesize = val;
                let param = {
                    "companyId":this.roleForm.compId,
                    "startTime":this.today,
                    "endTime":this.tomorrow,
                    "searchKey":this.query,
                    "getHeader":"1",
                    "pageIndex":this.currentPage,
                    "pageSize":this.pagesize
                };
                this.initData(param)
            },
            handleCurrentChange(val) {
                this.currentPage = val;
                let param = {
                    "companyId":this.roleForm.compId,
                    "startTime":this.today,
                    "endTime":this.tomorrow,
                    "searchKey":this.query,
                    "getHeader":"1",
                    "pageIndex":this.currentPage,
                    "pageSize":this.pagesize
                };
                this.initData(param)
            },
            async exportExcel(){
                let param ={
            		pageIndex:this.currentPage,
            		pageSize:this.pagesize,
                    companyId:this.roleForm.compId,
                    searchKey:this.query,
                    getHeader:"1",
                }
                const res = await queryOrderDetailSales(param);
                const list = [];
                  if (res.isSuccess){
                      res.result.pageResult.results.forEach(obj => {
                        let title= '' ;//商品名称
                    	let productCode = '';//商品货号
                    	let colours = '';//颜色
                    	let sizes = '';//尺码
                        let alreadyout = '';//已出货量
                    	let readyout = '';//待出货量
                    	let totalout = '';//商品总量
                    	let imgUrl_main = '';//产品主图
                    	if(obj.title){
                    		title = obj.title;
                    	}
                    	if(obj.productCode){
                    		productCode = obj.productCode;
                    	}
                    	var reg = new RegExp('_' , "g")
                    	if(obj.colours){
                            colours = obj.colours.replace(reg,"/");
                    	}
                    	if(obj.sizes){
                            sizes = obj.sizes.replace(reg,"/");
                    	}
                        if(obj.alreadyout){
                            alreadyout = obj.alreadyout;
                        }
                    	if(obj.readyout){
                    		readyout = obj.readyout;
                    	}
                    	if(obj.totalout){
                    		totalout = obj.totalout;
                    	}
                    	if(obj.imgUrl_main){
                    		imgUrl_main = obj.imgUrl_main;
                    	}
                    	let row = {
		            		title : title,
							productCode : productCode,
							colours : colours,
							sizes : sizes,
							alreadyout : alreadyout,
							readyout : readyout,
							totalout : totalout,
							imgUrl_main : imgUrl_main
		            	}
		            	list.push(row);
                    });

                    const tHeader = ['商品名称', '商品货号','颜色','尺码','已出货量','待出货量','商品总量','主图'];
			　　　　const filterVal = ['title', 'productCode','colours','sizes','alreadyout','readyout','totalout','imgUrl_main'];
			　　　　const data = this.formatJson(filterVal, list);
			　　　　export_json_to_excel(tHeader, data, '档口统计表');
                  }else{
                    this.$message({
                        type: 'error',
                        message: res.errorMsg
                    });
                  }
            },
        }
    }
</script>

