<script>
    import {setStore,getStore,userInfo} from  '../config/mUtils'
    import {querySettlementDetail} from '@/api/getData'

    export default {
        data() {
            return {
                tableData:[],
                orderId:'',
                busiCompId:'',
                totalCount:0,
                roleForm: {
                    userId: '',
                    roleId: '',
                    compId:''
                },
                currentPage:1,
                pagesize:10,
                closeStutas:'',
                stallName:'',
                totalFee:0,
                closeFee:0,
            }
        },
        watch:{
            '$route':function (route) {
                this.orderId = this.$route.query.orderId;
            }
        },
        mounted(){
            this.roleForm.userId=userInfo().userId;
            this.roleForm.compId = userInfo().companyId;
            this.orderId = this.$route.query.orderId;
            this.initData();
        },

        methods: {
            handleSizeChange(val) {
                this.pagesize = val;
                this.getQueryPara();
            },
            handleCurrentChange(val) {
                this.currentPage = val;
                this.getQueryPara();
            },
            getQueryPara(){
                this.tableData=[];
                this.initData();
            },
         async initData(){
             let param = {
                 "orderId":this.orderId,
                 "pageSize": this.pagesize,
                 "pageIndex": this.currentPage,
             }
             const data  = await querySettlementDetail(param);
             if (data.isSuccess == true){
                 this.tableData = data.result.results;
                 this.totalCount = data.result.results.totalCount;
             }
            }
        }
    }
</script>
