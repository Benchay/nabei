                this.roleForm.compId = vcom.id;
            },
            handleSizeChange(val) {
                console.log(`每页 ${val} 条`);
                this.pageSize = val;
                this.initloadData();
            },
            handleCurrentChange(val) {
                console.log(`当前页: ${val}`);
                this.currentPage = val;
                this.initloadData();
            },
            tabs(index){
               this.clickIndex2 = index;
                if(index == 0){
                    this.remind = false;
                    this.package1 = true;
                }else{
                    this.remind = true;
                    this.package1 = false;
                }
           },
            objectSpanMethod({ row, column, rowIndex, columnIndex }) {
                let data = row[column.property];
                for(let i = 0 ; i <this.productInfo.length;i++){
                    if(data==this.productInfo[i].productCode){
                        return {
                            rowspan:this.productInfo[i].details.length,
                            colspan:1
                        };
                    }
                }

//                if (columnIndex === 0) {
//                    if (rowIndex % 2 === 0) {
//                        return {
//                            rowspan: 2,
//                            colspan: 1
//                        };
//                    } else {
//                        return {
//                            rowspan: 0,
//                            colspan: 0
//                        };
//                    }
//                }
            },
            async initloadData(){
                this.productInfo = [];
                const res = await querySalesPackageListByOrder({orderId:this.orderId});
                if(res.isSuccess){
                    console.log(res);
                    var data=res.result.data;
                    if(data.length == 0){
                        this.packageList=[{list:1, name:'未配货'}];
                        let param = {
                            "companyId":this.roleForm.compId,
                            "orderId":this.orderId,
                            "packageId":"-1",
                            "pageIndex":this.currentPage,
                            "pageSize":this.pageSize
                        };
                        const res2 = await queryOrderManageDetail(param);
                        if(res2.isSuccess){
                            this.totalTableData =res2.result.data.results;
                            console.log(this.totalTableData);
                        }
                    }else{//packagelist

                    }
                }
            },

            findOrderLog(){
                this.dialog1 = true;
                this.loadOrderLog();
            },
            async loadOrderLog(){
                let param = {
                    "orderId":this.orderId,
                    "companyId":this.roleForm.compId
                };
                console.log(param);
              const res = await queryOrderLog(param);
              if(res.isSuccess){
                  this.orderLog = res.result;
              }else{
                  this.$message({
                      duration:this.GLOBAL.MESSAGE_DISSMISS_TIME_MID,
                      type:'error',
                      message:res.errorMsg
                  });
              }
            },
            formatOrderDate(time) {
                if(time==undefined||time==''){
                    return '';
                }
                var date = new Date(time);
                return formatDate(date, 'yyyy-MM-dd hh:mm');
            },
            formatScale(scale) {
                if (scale == '1') {
                    return "待确认";
                } else if (scale == '2') {
                    return "已配货";
                } else if (scale == '3') {
                    return "运输中";
                } else if (scale == '4') {
                    return "退货";
                } else if (scale == '5') {
                    return "已确认";
                } else if (scale == '6') {
                    return "部分配货";
                } else if (scale == '99') {
                    return "完成";
                }
            },
            async sendMessage(){
                let param = {
                    "orderId":this.orderId,
                    "messageType":0,
                    "userId":this.roleForm.userId
                };
                const  res= await remindPrepare(param);
                if(res.isSuccess){
                    this.$message({
                        type: 'success',
                        message: res.result.msg
                    });
                }else{
                    this.$message({
                        duration:this.GLOBAL.MESSAGE_DISSMISS_TIME_MID,
                        type:'error',
                        message:res.errorMsg
                    });
                }
            },

