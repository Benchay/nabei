                    this.singleItem = false;
                    this.chose1 = true;
                    this.chose3 = false;
                }else if(obj == 2 || obj == 3){
                    this.trend = true;
                    this.singleItem = false;
                    this.chose3 = true;
                    this.chose1 = false;
                }
