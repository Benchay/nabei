                    ],
                    pwd: [
                        { validator: validatePwd, trigger: 'blur' }
                    ],
                    checkPwd: [
                        { validator: validateCheckPwd, trigger: 'blur' }
                    ],
                    captcha: [
                        { validator: validateCaptcha, trigger: 'blur' }
                    ]
                },
                userNameRule: {
                    mobile: [
                        { validator: validateMobile, trigger: 'blur' }
                    ]
                },


            }
