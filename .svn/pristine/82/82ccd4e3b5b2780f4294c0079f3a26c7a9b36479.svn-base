.bindingShops{
    margin:1px 30px;
    background: #fff;
    padding: 20px 40px;
    color:#333;
    height:77%;
    .shopsTop{
        margin-bottom: 35px;
        p{
            width: 250px;
            text-align: center;
            color:green;
            font-size: 39px;
        }
        img{
            margin: 0 30px;
        }
    }
    .shops{
        font-size: 12px;
        flex-direction: column;
        height:210px;
        div{
            margin-bottom: 20px;
        }
        input{
            padding: 10px;
            width:200px;
        }
        .shopsTop1{
            padding-left: 5px;
            border: 1px solid #d4d4d4;
            .userName{
                background: url("../image/user.png") no-repeat left;
                padding-left: 25px;
            }
        }
        .shopsTop2{
            padding-left: 5px;
            border: 1px solid #d4d4d4;
            .password{
                background:url("../image/mima.png") no-repeat left;
                padding-left: 25px;
            }
        }
    }
    .color1{
        color:#72cec1;
    }
//    绑定成功
    .bingdingSuccess{
        height:210px;
        flex-direction: column;
        .successTip{
            width: 400px;
            height: 60px;
            background:#fff3eb ;
            border:1px solid #ff9c54;
            img{
                margin-right: 10px;
            }
        }
        .accounts{
            margin:30px 0 80px 0;
        }
        p{
            font-size: 13px;
        }
    }
}
.removeBinding{
    padding: 45px 0;
}
