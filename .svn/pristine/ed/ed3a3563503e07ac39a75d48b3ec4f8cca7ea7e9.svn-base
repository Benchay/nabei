<script>
    import headTop from '../components/headTop'
    import {queryPlatformAccount,bindingFinanceAccount,unbindingFinanceAccount} from '@/api/getData'
    import {userInfo,getStore,setStore} from  '../config/mUtils'


    export default {
        components: {
            headTop,
        },
        data() {
            return {
                //1为档口、2为卖家身份
                identity:1,

                addBank:false,
                imageUrl:'',
                dialogBank:false,
                dialogWechat:false,
                dialogalipay:false,
                input:'',
                alipay:[],
                wechat:[],
                accountUserName:'',
                accountNo:'',
                accountBankName:'',
                bank:[],
            }
        },

        mounted(){
            this.loadAccuntInfo();

        },
        methods: {
            handleAvatarSuccess(res, file) {
                this.imageUrl = URL.createObjectURL(file.raw);
            },
            beforeAvatarUpload(file) {
                const isJPG = file.type === 'image/jpeg';
                const isLt2M = file.size / 1024 / 1024 < 2;

                if (!isJPG) {
                    this.$message.error('上传图片只能是 JPG 格式!');
                }
                if (!isLt2M) {
                    this.$message.error('上传图片大小不能超过 2MB!');
                }
                return isJPG && isLt2M;
            },
            handleDelAccount (accountType,account){
                switch(accountType){
                    case 1:
                        let  acc_index =  this.alipay.findIndex(function(value, index){
                            return value = account;
                        })
                        if(acc_index>-1){
                            this.alipay.splice(acc_index,1);
                        }
                    case 2:
                        let  acc_index_1 =  this.wechat.findIndex(function(value, index){
                            return value = account;
                        })
                        if(acc_index_1>-1){
                            this.wechat.splice(acc_index_1,1);
                        }
                }
            },

            handleBindAccount (accountType){
                    this.dialogBank=false;
                    this.dialogWechat=false;
                    this.dialogalipay=false;
                let param ={
                    name:this.accountUserName,
                    accType:accountType,
                    bankType:this.accountBankName,
                    accoutNumber:this.accountNo,
                    companyId:'1000'
                }
                this.createAccount (param);

                this.$route.router.push(this.$route.path);
            },
            async loadAccuntInfo(){

                let param ={companyId:userInfo().companyId};
                const res = await queryPlatformAccount(param);
                if (res.isSuccess == true) {
                    this.$message({
                        type: 'success',
                        message: '加载数据成功'
                    });

                    this.alipay =this.getAccByType (1, res.result.financeAccounts);
                    this.wechat =this.getAccByType (2, res.result.financeAccounts);
                    this.bank =this.getAccByType (3, res.result.financeAccounts);

                }else{
                    this.$message({
                        type: 'error',
                        message: res.errorMsg
                    });
                }

            },

            async createAccount(param){
                const res = await bindingFinanceAccount(param);
                if (res.isSuccess == true) {
                    this.$message({
                        type: 'success',
                        message: '加载数据成功'
                    });
                    this.loadAccuntInfo();
                    this.restFields();
                }else{
                    this.$message({
                        type: 'error',
                        message: res.errorMsg
                    });
                }

            },
            getAccByType(type,financeAccounts) {
                let results = [];
                for (var acc of financeAccounts) {
                    if(acc.accType==type){
                        let  tem ={};
                        tem.account = acc.accoutNumber;
                        results.push(tem);

                    }
                }
                return results;
            },

            restFields() {
                this.accountUserName='';
                this.accountNo='';
                this.accountBankName=''
            }

        },
        filters: {
            toTel(str) {
                let start = str.slice(0, 3);
                let end = str.slice(-4);
                return `${start}****${end}`;
            }
        }
    }
</script>

