            },
            getDateTimes(){
        	  if(this.filters.date.start!=undefined||this.filters.date.start!=""){
        	      var date = new Date();
        	      var str  = formatDate(this.filters.date.start,'yyyy-MM-dd') + " " + date.getHours() + ":" + (date.getMinutes()<10?"0"+date.getMinutes():date.getMinutes()) + ":" + date.getSeconds();
        	      this.saveStart = str;
              }
            },
            getDateTimes2(){
                if(this.filters.date.end!=undefined||this.filters.date.end!=""){
                    var date = new Date();
                    var str  = formatDate(this.filters.date.end,'yyyy-MM-dd') + " " + date.getHours() + ":" + (date.getMinutes()<10?"0"+date.getMinutes():date.getMinutes()) + ":" + date.getSeconds();
