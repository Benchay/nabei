//                    type: 'warning'
//                }).then(() => {
//                    this.deleteRow(val);
//                }).catch(() => {
//                    this.$message({
//                        type: 'info',
//                        message: '已取消删除'
//                    });
//                });
//            },
            async deleteRow(val){
                const res = await deleteBulletin({"bulletinId":this.bulletinVO[index].id});
                if(res.isSuccess){
