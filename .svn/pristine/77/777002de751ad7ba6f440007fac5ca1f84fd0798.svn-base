                                    <!--</li>-->
                                    <li v-for="item in logList" >
                                        <i class="node-icon"></i>
                                        <span class="time">{{formatDate(item.createTime)}}</span>
                                        <div class="txt">
                                            <p>{{item.description}}</p>
                                            <p>联系人：{{item.nickName}}</p>
