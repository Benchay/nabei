<script>
    import headTop from '../components/headTop'
    import {formatDate} from '../utils/date.js'
    import {export_json_to_excel} from '../vendor/Export2Excel.js'
    import {queryStallOrder} from '@/api/getData'
    import {getStore} from  '../config/mUtils'

    export default {
        components: {
            headTop,
        },
        filters:{
            formatDate(time){
                return formatDate(time,"yyyy-MM-dd hh:mm:ss");
            }
        },
        data() {
            return {
                roleForm: {
                    userId: '',
                    roleId: '',
                    compId:''
                },
                dialog:false,
                radio:1,
                selects:false,
                value6:'',
                input:'',
                input1: '',
                input2: '',
                input3: '',
                tableData:[],

                pageSize:10,
                totalCount:0,
                currentPage:1

            }
        },
        mounted() {
//            var userInfo=getStore("user_info_user");
//            var vjson = JSON.parse(userInfo);
//            this.roleForm.userId=vjson.id;
//            this.roleForm.compId=vjson.curCompany.id;

            this.initloadData();//加载数据

            const s = document.createElement('script');
			s.type = 'text/javascript';
			s.src = 'http://oss.sheetjs.com/js-xlsx/xlsx.full.min.js';
			document.body.appendChild(s);
        },
        methods: {

            async initloadData() {
                this.tableData = [];
                let param ={
                    "pageIndex":this.currentPage,
                    "pageSize":this.pageSize,
                    "companyId":"1000",
                    "status":""
                }
                const res = await queryStallOrder(param);
                if (res.isSuccess == true) {
                    this.tableData = res.result.results;
                    this.totalCount = res.result.totalCount;
                    this.pageSize = res.result.pageSize;
                    this.currentPage = res.result.currentPage;
                }else{
                    this.$message({
                        duration:this.GLOBAL.MESSAGE_DISSMISS_TIME_MID,
                        type: 'error',
                        message: res.errorMsg
                    });
                }
            },

            handleSizeChange(val) {
                console.log(`每页 ${val} 条`);
                this.pageSize = val;
                this.initloadData();
            },
            handleCurrentChange(val) {
                console.log(`当前页: ${val}`);
                this.currentPage = val;
                this.initloadData();
            },
            handleIconClick(ev) {
                console.log(ev);
            },
            Stateialog(state,id,orderType,otherSideCompId,busiName,orderTime){
//                if(state == 2 || state == 1 || state == 6|| state == 7|| state == 9){
//                    this.$router.push('/indentManagementReturnDetails');
//                }else
//                if(state == 3 || state == 5){
//                    this.$router.push('/indentManagementReturnDetails2');
//                }else if(state ==4){
//                    this.$router.push('/indentManagementPackageDetails');
//                }else if(state == 8){
//                    this.$router.push({path:'/indentManagementComplete',query:{orderId:id}});
//                }
                if(state == 1 || state == 2 ){
                    this.$router.push('/indentManagementReturnDetails');
                }else if(state == 5 || state == 6){
                    this.$router.push({path:'/indentManagementReturnDetails2',query:{orderId:id,busiCompId:otherSideCompId,status:state,orderType:orderType,busiName:busiName,orderTime:orderTime}});
                }else if(state == 7 || state == 8 || state == 9){
                    this.$router.push({path:'/indentManagementReturnDetails',query:{orderId:id}});
                }else if(state == 99 && orderType==4){
                    this.$router.push({path:'/indentManagementComplete',query:{orderId:id}});
                }

            },
            async exportTableData() {
            	for(let i=0;i<this.tableData.length;i++){
            		let data1 = this.tableData[i];
            		if(data1.state && data1.state == 1){
            			data1.showState = '待确认';
            		}else if(data1.state && data1.state == 2){
            			data1.showState = '已配货';
            		}else if(data1.state && data1.state == 3){
            			data1.showState = '待入库';
            		}else if(data1.state && data1.state == 5){
            			data1.showState = '待配货';
            		}else if(data1.state && data1.state == 6){
            			data1.showState = '部分配货';
            		}
//            		else if(data1.state && data1.state == 6){
//            			data1.showState = '待入库';
//            		}
                }
            	const list = this.tableData;
                const tHeader = ['订单编号', '电商卖家','订单数量','订单金额','下单时间','结算方式','状态'];
			　　　const filterVal = ['orderNumber', 'seller','orderQuantity','orderMoney','date','clearing','showState'];
			　　　const data = this.formatJson(filterVal, list);
			　　　export_json_to_excel(tHeader, data, '订单管理表');
            },
            formatJson(filterVal, jsonData) {
		　　　　　　return jsonData.map(v => filterVal.map(j => v[j]))
		　　　　},
        }
    }
</script>

