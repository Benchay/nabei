.messageMenu{
    height:50px;
    margin-left: 30px;
    li{
        a{
            line-height: 50px;
            text-align: center;
            color:#333;
            width:160px;
            display: inline-block;
        }
    }
    li:first-child{
        a{
            background:@red;
            font-size: 16px;
            float: left;
            color:#fff;
        }
    }
}
.messageManagement {
    margin: 0 30px;
    background: #fff;
    padding: 20px 40px;
    .messageTop{
        .messageSelect{
            margin-left: 10px;
            width: 120px;
        }
    }
    .messageButton{
        margin: 20px 0;
    }
}
.dialogSend{
    input{
        width: 200px;
    }
}
.detailsImg{
    img{
        width:80px;
        height: 80px;
    }
}

.message{
    padding: 10px;
    padding-left: 20px;
}
.message-item{
    line-height: 40px;
}
